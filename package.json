{
	"name": "scrollmagic",
	"title": "ScrollMagic",
	"version": "3.0.0-beta.0",
	"description": "The lightweight library for magical scroll interactions.",
	"type": "module",
	"main": "./dist/scrollmagic.umd.js",
	"module": "./dist/scrollmagic.esm.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/scrollmagic.esm.js",
			"require": "./dist/scrollmagic.umd.js"
		}
	},
	"sideEffects": false,
	"files": [
		"dist"
	],
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.3.0",
		"@vitest/browser-playwright": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-plugin-compat": "^6.1.0",
		"globals": "^17.3.0",
		"jsdom": "^28.1.0",
		"prettier": "^3.8.1",
		"rollup": "^4.57.1",
		"rollup-plugin-bundle-size": "^1.0.3",
		"rollup-plugin-delete": "^3.0.2",
		"rollup-plugin-license": "^3.6.0",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.55.0",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "rollup -c",
		"dev": "npm run build -- --watch",
		"test": "npm run typecheck && vitest run",
		"test:unit": "vitest run --project unit",
		"test:e2e": "vitest run --project e2e",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"prepublishOnly": "npm run build",
		"release:pre": "npm version prerelease --preid='alpha' && npm publish --tag next"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/janpaepke/ScrollMagic.git"
	},
	"author": {
		"name": "Jan Paepke",
		"url": "https://janpaepke.de",
		"email": "e-mail@janpaepke.de"
	},
	"contributors": [
		{}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/janpaepke/ScrollMagic/issues"
	},
	"homepage": "https://scrollmagic.io",
	"browserslist": [
		"Chrome >= 73",
		"Firefox >= 69",
		"Safari >= 13.1",
		"Edge >= 79",
		"iOS >= 13.4",
		"Samsung >= 9.2",
		"not dead"
	]
}
