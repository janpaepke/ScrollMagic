{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES6",
		"lib": ["ES2020", "ES2022.Error", "DOM"],
		"module": "ES2020",
		"moduleResolution": "bundler",
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "tests/**/*"]
}
